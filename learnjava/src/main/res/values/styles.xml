<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light"> <!-- Base application theme. -->
        <!-- Colors -->
        <item name="colorPrimary">@color/colorPrimaryOrange</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkOrange</item>
        <item name="colorAccent">@color/colorAccentOrange</item>
        <item name="android:windowBackground">@color/windowBackgroundOrange</item>
        <!-- Button styling -->
        <item name="buttonStyle">@style/button_style_orange</item>
        <item name="imageButtonStyle">@style/image_button_style_orange</item>
        <!-- Text view style -->
        <item name="android:textViewStyle">@style/text_view_style</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme"> <!-- App theme, no toolbar version. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="AppTheme">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">?android:windowBackground</item>
    </style>

    <!-- Custom text appearances -->
    <style name="subtitle" parent="AppTheme"> <!-- Subtitles -->
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>
    <style name="title"> <!-- Titles -->
        <item name="android:textSize">@dimen/huge_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Custom button appearance -->
    <style name="button_style_orange" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/button_background_selector_orange</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:elevation">@dimen/elevation</item>
    </style>
    <style name="image_button_style_orange" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/image_button_background_orange</item>
        <item name="android:backgroundTint">@color/colorPrimaryOrange</item>
        <item name="android:elevation">0dp</item>
    </style>

    <!-- Text view customization -->
    <style name="text_view_style" parent="TextAppearance.AppCompat.Title">
        <item name="android:padding">@dimen/padding</item>
    </style>
</resources>
