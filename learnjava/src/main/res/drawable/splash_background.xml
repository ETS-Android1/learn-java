<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="@color/colorPrimaryOrange"
                android:endColor="@color/colorPrimary_Dark"/>
        </shape>
    </item>
    <item android:width="90dp" android:height="90dp" android:gravity="center">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimaryDarkOrange"/>
            <stroke android:color="@android:color/black"/>
            <corners android:radius="@dimen/radius"/>
        </shape>
    </item>
    <item android:height="80dp" android:width="80dp" android:gravity="center">
        <bitmap android:src="@drawable/learn_java_icon"
            android:gravity="center"  />
    </item>
</layer-list>